
@model User

<h3>Register</h3>

<!-- The form needs to do something rather than just be a page with a bunch of boxes and a button -->
<!-- Just give it an order so we'll make it go right to a route named /register and then we need the form to post -->
<form action="/register" method="post">
	<div class="row">
		<div class="col-sm-6">
			<div class="form-group">
				<label>Username</label>
				<input type="test" name="Name" class="form-control">
				<p>
					<span asp-validation-for="Name"></span>
				</p>
			</div>
			<div class="form-group">
				<label>Email</label>
				<input type="test" name="Email" class="form-control">
				<p>
					<span asp-validation-for="Email"></span>
				</p>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="form-group">
				<label>Password</label>
				<input type="password" name="Password" class="form-control">
				<p>
					<span asp-validation-for="Password"></span>
				</p>
			</div>
			<div class="form-group">
				<label>ConfirmPassword</label>
				<input type="password" name="ConfirmPassword" class="form-control">
				<p>
					<span asp-validation-for="ConfirmPassword"></span>
				</p>
			</div>
			<input type="submit" value="Register" class="btn btn-outline-success">
		</div>
	</div>


</form>